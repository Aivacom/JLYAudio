<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48"
    android:layout_marginBottom="@dimen/dp2"
    android:background="@drawable/bg_member">

    <TextView
        android:id="@+id/item_tv_uid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="11dp"
        android:gravity="center|left"
        android:textColor="@color/black95"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_iv_volume"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_iv_volume"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp16"
        android:layout_margin="@dimen/dp12"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_uid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tv_uid" />

</android.support.constraint.ConstraintLayout>
